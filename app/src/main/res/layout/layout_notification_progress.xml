<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/layout_notification_progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Compat.Notification.Title"/>

    <TextView
        android:id="@+id/layout_notification_progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        style="@style/TextAppearance.Compat.Notification.Line2"/>

    <ProgressBar
        android:id="@+id/layout_notification_progressBar"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/notification_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_notification_progress_second_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/layout_notification_progress_second_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="4dp"
            android:textSize="14sp"
            style="@style/TextAppearance.Compat.Notification.Line2"/>
    </LinearLayout>
</LinearLayout>