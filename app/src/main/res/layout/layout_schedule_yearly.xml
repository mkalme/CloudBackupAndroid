<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/layout_schedule_yearly_dayOfTheYearTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        style="@style/Style.CloudBackup.TextView.Dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="-3.5dp"
        android:layout_marginTop="-2.5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/layout_schedule_yearly_dayOfYearEditText"
            android:hint="@string/layout_schedule_yearly_dayOfYearTextDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="-5dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:enabled="false"
            android:autofillHints=""
            android:theme="@style/Style.CloudBackup.EditText" />

        <Spinner
            android:id="@+id/layout_schedule_yearly_monthSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Style.CloudBackup.Spinner.Light" />

        <Spinner
            android:id="@+id/layout_schedule_yearly_daySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            style="@style/Style.CloudBackup.Spinner.Light" />
    </LinearLayout>
</LinearLayout>